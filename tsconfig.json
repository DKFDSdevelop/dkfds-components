{
  // Only compile and check JS that can be reached through the primary entrypoints
  "files": ["src/js/dkfds-custom-elements.js", "./src/js/dkfds.js"],
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "Node16",
    "module": "Node16",
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    // This compiler run should
    // only output d.ts files
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "declarationMap": true
  }
}
