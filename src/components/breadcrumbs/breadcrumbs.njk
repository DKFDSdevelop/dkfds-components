{%- macro breadcrumbs(params) -%}
<div class="breadcrumbs{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  <ol class="breadcrumbs__list">
  {% for item in params.items %}
    {% if item.href %}
    <li class="breadcrumbs__list-item">
      <a class="breadcrumbs__link" href="{{ item.href }}"{% for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>{{ item.html | safe if item.html else item.text }}</a>
    </li>
    {% else %}
    <li class="breadcrumbs__list-item" aria-current="page">{{ item.html | safe if item.html else item.text }}</li>
    {% endif %}
  {% endfor %}
  </ol>
</div>
{%- endmacro -%}
