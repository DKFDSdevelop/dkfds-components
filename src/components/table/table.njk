{% from "components/buttons/buttons.njk" import button as button %}

{% macro table(params) %}
<div class="table--responsive-scroll{% if params.outerClasses %} {{ params.outerClasses }}{% endif %}">
    <table class="table{% if params.zebra %} table--zebra{% endif %}{% if params.selectable %} table--selectable{% endif %}{% if params.borderless %} table--borderless{% endif %}{% if params.compactClass %} {{ params.compactClass }}{% endif %}{% if params.innerClasses %} {{ params.innerClasses }}{% endif %}{% if params.responsive %} table-{% if params.responsiveVariant %}{{params.responsiveVariant}}{% endif %}-responsive-headers{% endif %}"{% if params.id %} id="{{ params.id }}"{% endif %}{% if params.attributes %} {{ params.attributes | safe }}{% endif %}>
        <thead>
            <tr>
                {%- if params.selectable -%}
                    {%- set ariacontrols = "" -%}
                    {%- for row in params.tbody -%}
                        {%- set ariacontrols = ariacontrols + " " + params.id + "-check-"+ loop.index -%}
                    {%- endfor -%}
                    <th>
                        <input id="{{params.id}}-check-all" type="checkbox" class="form-checkbox" aria-controls="{{ariacontrols}}">
                        <label for="{{params.id}}-check-all" aria-label="Vælg alle rækker"></label>
                    </th>
                {%- endif -%}
                {% set sortingColumn = 0 %}
                {% if params.sorting.column %}{% set sortingColumn = params.sorting.column %}{% endif %}
                {% for th in params.thead %}
                <th{% if th.classes %} class="{{ th.classes }}"{% endif %}{% if loop.index === sortingColumn and params.sorting.direction %} aria-sort="{{ params.sorting.direction }}"{% endif %}>
                {{-th.columnName-}}{% if loop.index === sortingColumn and params.sorting.direction === "ascending" %}{{ button({
                    "variant": "unstyled",
                    "id": th.sortingID,
                    "attributes": "type=\"button\"",
                    "srOnly": "Sortér faldende efter " + th.columnName,
                    "icon": "sort-table-ascending",
                    "classes": "ml-2",
                    "iconClasses": "mr-0" }) 
                }}{% elif loop.index === sortingColumn and params.sorting.direction === "descending" %}
                {{ button({
                    "variant": "unstyled",
                    "id": th.sortingID,
                    "attributes": "type=\"button\"",
                    "srOnly": "Sortér stigende efter " + th.columnName,
                    "icon": "sort-table-descending",
                    "classes": "ml-2",
                    "iconClasses": "mr-0" }) 
                }}{% elif th.sorting %}
                {{ button({
                    "variant": "unstyled",
                    "id": th.sortingID,
                    "attributes": "type=\"button\"",
                    "srOnly": "Sortér efter " + th.columnName,
                    "icon": "sort-table-none",
                    "classes": "ml-2",
                    "iconClasses": "mr-0" }) 
                }}{% endif %}
                </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody{% if params.sorting %} aria-live="polite"{% endif %}>
            {% for row in params.tbody %}
            <tr>
                {%- if params.selectable -%}
                <td><input id="{{params.id}}-check-{{loop.index}}" type="checkbox" name="{{params.id}}-check[]" class="form-checkbox" value="{{row[0]}}">
                    <label for="{{params.id}}-check-{{loop.index}}" aria-label="Vælg række"><span class="sr-only">Vælg række</span></label>
                </td>
                {%- endif -%}
                {% for td in row %}
                <td>{{td | safe}}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if params.actions and params.selectable %}
    <div class="table-actions">
        <p class="table-selected-number no-selected">Vælg en eller flere rækker for at udføre funktioner</p>
        {% for action in params.actions %}
            {{ button(action) }}
        {% endfor %}
    </div>
    {%- endif -%}
</div>
{% endmacro %}
