{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}

{% macro search(params) %}
<div class="form-group search">
    <label for="{{ params.inputId }}" class="sr-only">Søg efter indhold</label>
    <input class="form-input{% if params.classes %} {{ params.classes }}{% endif %}" id="{{ params.inputId }}" name="{{ params.name }}" type="search">
    <button class="button button-search"{% if params.buttonId %} id="{{ params.buttonId }}"{% endif %}{% if params.buttonType %} type="{{ params.buttonType }}"{% endif %}>
        {% if params.useIcon %}{{ icon_svg({"name": 'search', "classes": 'm-0'})}}<span class="sr-only">Søg</span>{% else %}Søg{% endif %}
    </button>
</div>
{% endmacro %}