{% from "components/form/controls/label.njk" import label as label %}
{% macro select(params) %}
  <div class="form-group {% if params.errorMessage %}form-error{% endif %}">
     {{label({
    text: params.label.text,
    classes: params.label.classes,
    tooltip: params.label.tooltip,
    for: params.id,
    optionalLabel: params.label.optionalLabel,
    requiredLabel: params.label.requiredLabel
  }) | indent(2) | trim }}
    {% if params.errorMessage %}<span class="form-error-message"><span class="sr-only">Fejl:</span> {{ params.errorMessage }}</span> {% endif %}
    <select class="{{params.classes}} form-select" name="{{params.name}}" id="{{params.id}}"  {% if params.disabled %}disabled="disabled"{% endif %}{% if params.multiple %} multiple{% endif %}>
      {% for option in params.options %}
        <option value="{{option.value}}" {%if option.selected %}selected{% endif %}>{{option.text}}</option>
      {% endfor %}
    </select>
  </div>
{% endmacro %}
