{% macro radiobutton(id, name, value, disabled, checked, text, class, focus, large, attr, inputClasses, inputAttrs, formClasses, srOnly, helptext) %}
  <input id="{{id}}" type="radio" name="{{name}}" value="{{value}}" {% if helptext %}aria-describedby="helptext-{{id}}"{% endif %}class="form-radio {% if focus %}focus{% endif %} {% if large %}radio-large{% endif %} {{inputClasses}}" {% if disabled %}disabled{% endif %} {% if checked %}checked{% endif %} {{inputAttrs | safe }} />
  <label for="{{id}}" class="{{class}}" {{attr | safe}}>{{text}} {% if srOnly %}<span class="sr-only">{{srOnly}}</span>{% endif %}</label>
  {% if helptext %}<span class="form-hint" id="helptext-{{id}}">{{ helptext }}</span>{% endif %}
{% endmacro %}
