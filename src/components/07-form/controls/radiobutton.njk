{% macro radiobutton(id, name, value, disabled, checked, text, class, focus, large, attr, inputClasses, inputAttrs, formClasses) %}
  <div class="form-group {{formClasses}}">
    <input id="{{id}}" type="radio" name="{{name}}" value="{{value}}" class="form-radio {% if focus %}focus{% endif %} {% if large %}radio-large{% endif %} {{inputClasses}}" {% if disabled %}disabled{% endif %} {% if checked %}checked{% endif %} {{inputAttrs}}>
    <label for="{{id}}" class="{{class}}" {{attr}}>{{text}}</label>
  </div>
{% endmacro %}

<div class="container">
    <ul class="unstyled-list">
      {% for item in radiobuttons_example.items %}
      <li class="mb-2">
        {{ radiobutton(item.id, item.name, item.value, item.disabled, item.checked, item.text, item.class, item.focus, item.large) }}
      </li>
      {% endfor %}
    </ul>
</div>
