{# Unordered list #}
{% macro ul_list(params) %}
  {% for item in params.items %}
  <li>{{ item.text }}
    {%- if item.list -%}
    <ul class="{{ subclass }}">
      {{ ul_list({"items": item.list, "subclass": params.subclass}) }}
    </ul>
    {%- endif -%}
  </li>
  {% endfor %}
{% endmacro %}

{# Ordered list #}
{% macro ol_list(params) %}
  {%- for item in params.items -%}
  <li>{{ item.text }}
    {%- if item.list -%}
    <ol class="{{ params.subclass }}" {% if item.list.type %}type="{{item.list.type}}"{% endif %}>
      {{ ol_list({"items": item.list, "subclass": params.subclass}) }}
    </ol>
    {%- endif -%}
  </li>
  {%- endfor -%}
{% endmacro %}
