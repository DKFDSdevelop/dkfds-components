{% from "components/buttons/buttons.njk" import button as button %}
{% from "components/icons/icons--svg.njk" import icon_svg as icon_svg %}

{% macro card(params) %}
{%- if params.navigationCard -%}
<a class="card{% if params.long %} long{% endif %}{% if params.classes %} {{params.classes}}{% endif %}" href="{{params.navigationCard.href}}"{% if params.id %} id="{{params.id}}"{% endif %}{% if params.navigationCard.external %} target="_blank"{% endif %}>
{%- else -%}
<{{ params.innerTag | default('div') }} class="card{% if params.long %} long{% endif %}{% if params.classes %} {{params.classes}}{% endif %}"{% if params.id %} id="{{params.id}}"{% endif %}>
{%- endif -%}
    {%- if params.image -%}
    <div class="card-image"{% if params.image.placeholder %} {{ params.image.placeholder | safe }}{% endif %}>
        {%- if params.image.src -%}
        <img src='{{ params.image.src }}' alt='{{ params.image.alt }}'>
        {%- endif -%}
    </div>
    {%- endif -%}
    {%- if params.subheading or params.heading or params.content or params.links or params.buttons -%}
    <div class="card-content">
        {%- if params.subheading -%}
        <span class="subheading">{{ params.subheading }}</span>
        {%- endif -%}
        {%- if params.heading -%}
        <{{ params.headingLevel | default('h2') }} class="heading">{{ params.heading }}</{{ params.headingLevel | default('h2') }}>
        {%- endif -%}
        {%- if params.content -%}
        {{ params.content | safe }}
        {%- endif -%}
    </div>
    {%- endif -%}
    {%- if params.navigationCard.external -%}
    {{ icon_svg({"name": "open-in-new", "ariaLabel": "(Ã¥bner i nyt vindue)", "classes": "card-icon"}) }}
    {%- elseif params.navigationCard -%}
    {{ icon_svg({"name": "arrow-forward", "classes": "card-icon"}) }}
    {%- endif -%}
{%- if params.navigationCard -%}
</a>
{%- else -%}
</{{ params.innerTag | default('div') }}>
{%- endif -%}
{% endmacro %}
