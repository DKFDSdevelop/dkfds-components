

{% macro tabnav(tabnav) %}

<ul class="tabnav">
  {% for item in tabnav.items %}
  <li>
    <a href="#{{item.id}}" {% if item.active %} class="active"{% endif %}
      aria-expanded="{{ item.active | default('false') }}">
      <span>{{ item.title }}</span>
      {% if item.active %}<span class="sr-only">(valgt)</span>{% endif %}
    </a>

       {% set ariahidden = "true" %}

      {%- if item.active %}
        {% set ariahidden = "false" %}
      {% else -%}
        {% set ariahidden = "true" %}
      {% endif -%}
     <section class="tabnav-panel" aria-hidden="{{ariahidden}}" id="{{item.id}}">
        <h2 class="govuk-heading-l">{{ item.title }}</h2>
        {{ item.content | safe }}
      </section>
  </li>
  {% endfor %}
</ul>
{% endmacro %}
