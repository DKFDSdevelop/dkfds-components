{% macro icon_svg(params) %}
<svg class="icon-svg{% if params.classes %} {{ params.classes }}{% endif %}"{% if params.ariaLabel %} aria-label="{{params.ariaLabel}}"{% endif %} focusable="{{params.focusable|default('false')}}" aria-hidden="{{params.ariahidden|default('true') }}"{% if params.tabindex %} tabindex="-1"{% endif %}><use xlink:href="#{{params.name}}"></use></svg>
{% endmacro %}
