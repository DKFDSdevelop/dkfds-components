{% macro alert(classes, role, title, content, aria, close) %}
<div class="alert {{ classes }} {% if close %} has-close{% endif %}" {% if role %}role="{{role}}"{% endif %} aria-label ="{{ aria }}">
  <div class="alert-body">
    {%- if title -%}
    <p class="alert-heading {% if close %} pr-7{% endif %}">{{ title | safe }}</p>
    {%- endif -%}

    {%- if close -%}
    <a href="javascript:void(0);" class="alert-close"><svg class="icon-svg" aria-hidden="true" focusable="false" tabindex="-1"><use xlink:href="#close"></use></svg>Luk</a>
    {%- endif -%}

    <p class="alert-text">{{ content | safe }}</p>

  </div>
</div>
{% endmacro %}
